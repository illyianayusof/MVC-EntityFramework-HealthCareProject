@model IEnumerable<HealthCareProject.Models.HealthCareContext>

@{ ViewData["Title"] = "Client";

}



<div class="container-fluid" align="center" justify-content="center" style="background-color:white;">
    <h1>List of Clients</h1>

    <a class="btn btn-success" asp-area="" asp-controller="Client" asp-action="Register">Register Clients</a>
    <a class="btn btn-warning" asp-area="" asp-controller="HospitalService" asp-action="Index">Back</a>


    <br />
    <br />

    <table class="table-striped table-bordered">
        <thead>
            <tr align="center" justify-content="center">
                <th>
                    Client ID
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Actions
                </th>

            </tr>
        </thead>
        <tbody>

            @foreach (var item in (IEnumerable<HealthCareProject.Models.Client>)ViewBag.Client)
            {

                <tr align="center" justify-content="center">
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        <button class="btn btn-warning"> @Html.ActionLink("Edit", "Edit", new { id = item.ClientId })</button>
                        <button class="btn btn-danger"> @Html.ActionLink("Delete", "Delete", new { id = item.ClientId })</button>



                    </td>


                </tr>
            }
        </tbody>
    </table>
    <br />
    <br />
    <br />
    <br />

</div>