@model IEnumerable<HealthCareProject.Models.HealthCareContext>

@{ ViewData["Title"] = "Index";

}


<body>
    <div class="container-fluid" align="center" justify-content="center" style="background-color:white">
        <h1>List of Doctors</h1>

        <a class="btn btn-success" asp-area="" asp-controller="Doctor" asp-action="Register">Register Doctor</a>
        <a class="btn btn-warning" asp-area="" asp-controller="HospitalService" asp-action="Index">Back</a>


        <br />
        <br />


        <table class="table-striped table-bordered">
            <thead>
                <tr align="center" justify-content="center">
                    <th>
                        Doctor ID
                    </th>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Practicing Form
                    </th>
                    <th>
                        Specialization
                    </th>
                    <th>
                        Hospital Id
                    </th>
                    <th>
                        Action
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in (IEnumerable<HealthCareProject.Models.Doctor>)ViewBag.Doctor)
                {
                    <tr align="center" justify-content="center">
                        <td>
                            @Html.DisplayFor(modelItem => item.DoctorId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PracticingForm)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Specialization)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HospitalId)
                        </td>

                        <td>
                            <button class="btn btn-warning"> @Html.ActionLink("Edit", "Edit", new { id = item.DoctorId })</button>
                            <button class="btn btn-danger">  @Html.ActionLink("Delete", "Delete", new { id = item.DoctorId })</button>

                        </td>


                    </tr>
                }
            </tbody>
        </table>
        <br />
        <br />
        <br />
        <br />

    </div>

</body>

