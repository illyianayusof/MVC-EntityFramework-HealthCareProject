@model HealthCareProject.Models.Doctor


@{ ViewData["Title"] = "Register";
}

<h1>Register as a Doctor</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PracticingForm" class="control-label"></label>
                <input asp-for="PracticingForm" class="form-control" />
                <span asp-validation-for="PracticingForm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialization" class="control-label"></label>
                <input asp-for="Specialization" class="form-control" />
                <span asp-validation-for="Specialization" class="text-danger"></span>
            </div>
          

        <div class="form-group">
            <label asp-for="HospitalId" class="control-label"></label>
            <select asp-for="HospitalId" class="form-control"
                    asp-items="@(new SelectList(ViewBag.ListofHospitalId, "HospitalId", "HospitalName"))"></select>
            <span asp-validation-for="HospitalId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save me" class="btn btn-success" />
            <a class="btn btn-warning" asp-area="" asp-controller="Doctor" asp-action="Index">Back</a>
        </div>
        </form>
    </div>
</div>